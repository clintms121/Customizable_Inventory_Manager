<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox spacing="20" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mainPackage.ReportsController">
    <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 20; -fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 5, 0, 0, 0);">
        <Label style="-fx-font-size: 24; -fx-font-weight: bold;" text="Reports" />
        <Button fx:id="exportButton" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 20; -fx-padding: 8 20;" text="Export Report" />
    </HBox>

    <VBox style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 5, 0, 0, 0);">
        <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Inventory Summary Report" />
        <TableView fx:id="reportsTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="categoryColumn" text="Category" />
                <TableColumn fx:id="totalItemsColumn" text="Total Items" />
                <TableColumn fx:id="averagePriceColumn" text="Avg. Price" />
                <TableColumn fx:id="totalValueColumn" text="Total Value" />
                <TableColumn fx:id="lowStockColumn" text="Low Stock Items" />
            </columns>
        </TableView>
    </VBox>
</VBox>
